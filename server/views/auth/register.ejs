<%- include ../partials/header.ejs %>
<%- include ../partials/main_nav.ejs %>
<main class="container">
 <!--Message Area-->

    <% if (message.lenth > 0) { %>
    <div class="alert alter-danger">
        <%= message %>
    </div>
    <% } %>

  <body class="main-bg">
  <!-- Login Form -->
  <div class="container">
    <div class="row justify-content-center mt-5">
      <div class="col-lg-4 col-md-6 col-sm-6">
        <div class="card shadow">
          <div class="card-title text-center border-bottom">
            <h2 class="p-3"> <img src="../Assets/images/pancakelogo.png" alt="Avatar Logo" style="width:80px;" class="bg-white"> </h2>
            <p>Please Register</p>
          </div>
          <div class="card-body">
            <form method="post" autocomplete="off">
              <div class="mb-4">
                <fieldset class="form-group">
                <label for="username" class="form-label">Username</label>
                <input type="text" class="form-control" name="username" placeholder="Enter Username"
                id="username" required autofocus />
                </fieldset>
              </div>
              <div class="mb-4">
              <fieldset class="form-group">
                <label for="password" class="form-label">Password</label>
                <input type="password" class="form-control" id="password"
                name="password" placeholder="Enter Password" required autofocus/>
                </fieldset>
              </div>
              <div class="mb-4">
              <fieldset class="form-group">
                <label for="email" class="form-label">Email</label>
                <input type="email" class="form-control" id="email"
                name="email" placeholder="Enter Email Address" required autofocus/>
                </fieldset>
              </div>
              <fieldset class="form-group">
                <label for="displayName" class="form-label">Display Name</label>
                <input type="text" class="form-control" id="displayName"
                name="displayName" placeholder="Enter display name" required autofocus/>
                </fieldset>
              </div>

             
                <fieldset class="form-group text-right">
                <button type="submit" class="btn text-dark main-bg" value="Register">Register</button>
                <a href="/">
                  <input type="button" class="btn btn-warning" value="Cancel">
                </a>
                </fieldset>
             
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
</main>
<%- include ../partials/bottom_nav.ejs %>
<%- include ../partials/footer.ejs %>